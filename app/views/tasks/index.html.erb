<h2>My Tasks</h2>
<% @tasks.each do |task| %>
<p>
  <% if task.completed %>
    <input type="checkbox" name="<%= task.title %>" checked>
     <%= link_to task.title, task_path(task.id)%>
   <%= link_to "Delete",
   task_path(task),
   method: :delete,
   data: {confirm: "Are you sure?"} %>
   <% else %>
   <input type="checkbox" name="<%= task.title %>">
   <%= link_to task.title, task_path(task.id)%>
   <%= link_to "Delete",
   task_path(task),
   method: :delete,
   data: {confirm: "Are you sure?"} %>
   <% end %>
  </p>
  <% end %>
<%= link_to 'add a task', tasks_new_path %>




<h1><%= @task.title %></h1>
<p><%= @task.details %></p>


<% if @task.completed %>
    <input type="checkbox" name="<%= @task.title %>" checked>
    This task has been completed
   <% else %>
   <input type="checkbox" name="<%= @task.title %>">
   This task has not been completed
   <% end %>

<%= link_to 'edit task', task_edit_path(@task) %>

<%= link_to 'back to all tasks', tasks_path %>
